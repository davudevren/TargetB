<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.evren.android.targetb.startActivity">

    <TextView android:text="start Activity" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startWelcome" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start The Server"
        android:id="@+id/startServer"
        android:onClick="startServer"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Round"
        android:id="@+id/StartRound"
        android:layout_below="@+id/startServer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:onClick="startRound" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Dein Name"
        android:ems="10"
        android:id="@+id/serverName"
        android:layout_above="@+id/startServer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp" />

</RelativeLayout>
